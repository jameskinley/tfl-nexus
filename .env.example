# TfL Nexus Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=sa
POSTGRES_PASSWORD=password
POSTGRES_DB=tflnexus

# ============================================================================
# TFL API CONFIGURATION
# ============================================================================
# Get your API key from: https://api-portal.tfl.gov.uk/
TFL_PRIMARY_KEY=your_primary_api_key_here
TFL_SECONDARY_KEY=your_secondary_api_key_here
TFL_BASE_URL=https://api.tfl.gov.uk
TFL_USE_CACHE=true

# ============================================================================
# INGESTION CONFIGURATION
# ============================================================================
# Comma-separated list of transport modes to ingest
# Available: tube, dlr, elizabeth-line, overground, tram, bus, river-bus, cable-car
INGESTION_MODES=tube,dlr,elizabeth-line,overground,tram

# ============================================================================
# PHASE 2 CONFIGURATION
# ============================================================================
# Disruption monitor polling interval (seconds)
DISRUPTION_POLL_INTERVAL=120

# Arrival prediction polling interval (seconds)
ARRIVAL_POLL_INTERVAL=60

# Historical backfill period (days)
HISTORICAL_BACKFILL_DAYS=90

# Minimum samples required for transfer statistics
TRANSFER_MIN_SAMPLES=10
